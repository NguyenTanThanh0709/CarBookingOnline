<!-- your_item_layout.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/carview_booking"
    android:layout_margin="10dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="ID:"/>

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Khách Hàng: "/>

        <TextView
            android:id="@+id/fareAmount"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Giá:"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Trạng thái:"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Ngày:"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Mô Tả:"/>
        <TextView
            android:id="@+id/locationDetailPickUp"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Điểm đón:"/>
        <TextView
            android:id="@+id/locationDetailDropOff"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Điểm trả:"/>
        <TextView
            android:id="@+id/seats"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="Chỗ ngồi:"/>


        <Button
            android:id="@+id/dadi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Hoàn Thành"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/dahuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy Vé"
            android:textAllCaps="false" />

    </LinearLayout>




</androidx.cardview.widget.CardView>
